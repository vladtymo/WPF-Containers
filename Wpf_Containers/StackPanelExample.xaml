<Window x:Class="Wpf_Containers.StackPanelExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Containers"
        mc:Ignorable="d"
        Title="StackPanelExample" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button>First Button</Button>
        <Button FontSize="20">Second Button</Button>
        <Button Height="50">Third Button</Button>
        <Button Width="200">Fourth Button</Button>
        <Button Width="Auto">Fifth Button</Button>
    </StackPanel>

