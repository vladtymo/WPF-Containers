<Window x:Class="Wpf_Containers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Containers"
        mc:Ignorable="d"
        Title="MainWindow" Height="455" Width="800" MinHeight="455" MinWidth="200">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock TextAlignment="Center" FontSize="30">WPF Container Examples</TextBlock>
        <Button Margin="5" Click="Button_Click" Height="50">StackPanel</Button>
        <Button Margin="5" Click="Button_Click_1" Height="50">WrapPanel</Button>
        <Button Margin="5" Click="Button_Click_2" Height="50">Grid</Button>
        <Button Margin="5" Click="Button_Click_3" Height="50">UniformGrid</Button>
        <Button Margin="5" Click="Button_Click_4" Height="50">Canvas</Button>
        <Button Margin="5" Click="Button_Click_5" Height="50">DockPanel</Button>
    </StackPanel>
</Window>
