<Window x:Class="Wpf_Containers.WrapPanelExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Containers"
        mc:Ignorable="d"
        Title="WrapPanelExample" Height="450" Width="800">
    <WrapPanel Orientation="Vertical">
        <Button Width="Auto" Height="Auto">Button 1</Button>
        <Button Width="100">Button 2</Button>
        <Button Width="150">Button 3</Button>
        <Button Height="50">Button 4</Button>
        <Button Height="100">Button 5</Button>
        <Button>Button 6</Button>
        <Button>Button 7</Button>
        <Button>Button 8</Button>
    </WrapPanel>
</Window>
